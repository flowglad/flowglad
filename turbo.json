{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "build:declarations"],
      "outputs": ["dist/**"]
    },
    "check": {
      "dependsOn": ["^check", "^build:declarations"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck", "^build:declarations"],
      "outputs": []
    },
    "build:declarations": {
      "dependsOn": ["^build:declarations"],
      "outputs": ["dist/types/**"]
    },
    "test": {
      "dependsOn": ["^test", "^build", "^build:declarations"],
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    }
  }
}
