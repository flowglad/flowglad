{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build", "build:declarations"],
        "outputs": ["dist/**"]
      },
      "build:declarations": {
        "dependsOn": ["^build:declarations"],
        "outputs": ["dist/types/**"]
      },
      "lint": {
        "dependsOn": ["^lint"],
        "cache": false,
        "persistent": true
      }
    }
  }