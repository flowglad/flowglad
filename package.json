{
  "name": "@flowglad/javascript",
  "private": true,
  "license": "MIT",
  "version": "0.0.0",
  "scripts": {
    "randombytes": "tsx scripts/randomBytes.ts",
    "test": "bunx turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "dev": "bunx turbo run dev --parallel --no-cache --filter=!@flowglad/playground-*",
    "check": "bunx turbo run check",
    "clean": "bunx turbo run clean",
    "changeset:empty": "bunx changeset --empty",
    "prebuild": "bun run build:declarations",
    "preinstall": "bunx --bun only-allow bun",
    "build": "bunx turbo run build --filter=!@flowglad/playground-*",
    "build:declarations": "bunx turbo run build:declarations",
    "packages:changeset": "changeset",
    "packages:version": "changeset version && bunx @cjkihl/changeset-dep-resolver resolve",
    "packages:publish": "bun run build:declarations && bun run build && bunx changeset publish && bunx @cjkihl/changeset-dep-resolver restore",
    "prepare": "husky"
  },
  "dependencies": {
    "tsx": "4.17.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^18.0.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "19.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "husky": "^9.1.7",
    "prettier": "3.5.1",
    "prettier-plugin-packagejson": "2.5.8",
    "prettier-plugin-tailwindcss": "0.6.11",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tsup": "8.3.6",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "workspaces": [
    "packages/*",
    "playground/*"
  ],
  "packageManager": "bun@1.3.1"
}
