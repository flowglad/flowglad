{
  "name": "@flowglad/javascript",
  "private": true,
  "license": "MIT",
  "version": "0.0.0",
  "scripts": {
    "randombytes": "tsx scripts/randomBytes.ts",
    "test": "bunx turbo run test",
    "yalc:publish": "bunx turbo run yalc:publish",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "dev": "tsx scripts/dev.ts",
    "dev:react": "bun run --filter @flowglad/react dev",
    "dev:next": "bun run --filter @flowglad/nextjs dev",
    "dev:server": "bun run --filter @flowglad/server dev",
    "check": "bunx turbo run check",
    "clean": "bunx turbo run clean",
    "changeset:empty": "bunx changeset --empty",
    "preinstall": "bunx --bun only-allow bun",
    "build": "bunx turbo run build",
    "build:declarations": "bunx turbo run build:declarations",
    "packages:changeset": "changeset",
    "packages:version": "changeset version",
    "packages:publish": "bun run build:declarations && bun run build && bunx changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/node": "^18.0.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "19.0.0",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "conventional-changelog-cli": "^5.0.0",
    "debounce": "^2.2.0",
    "husky": "^9.1.7",
    "prettier": "3.5.1",
    "prettier-plugin-packagejson": "2.5.8",
    "prettier-plugin-tailwindcss": "0.6.11",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tsup": "8.3.6",
    "tsx": "4.17.0",
    "turbo": "^2.4.4",
    "typescript": "5.8.2",
    "zx": "^8.3.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.2.14"
}
