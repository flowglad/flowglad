{
  "name": "@flowglad/javascript",
  "private": true,
  "license": "MIT",
  "version": "0.0.0",
  "scripts": {
    "randombytes": "tsx scripts/randomBytes.ts",
    "test": "bunx turbo run test --filter=!@flowglad/playground-*",
    "format": "BIOME_BINARY=@biomejs/cli-linux-x64-musl/biome biome format --write .",
    "format:check": "BIOME_BINARY=@biomejs/cli-linux-x64-musl/biome biome format .",
    "lint": "BIOME_BINARY=@biomejs/cli-linux-x64-musl/biome biome lint .",
    "lint:fix": "BIOME_BINARY=@biomejs/cli-linux-x64-musl/biome biome lint --write .",
    "check:biome": "BIOME_BINARY=@biomejs/cli-linux-x64-musl/biome biome check .",
    "dev": "bunx turbo run dev --parallel --no-cache --filter=!@flowglad/playground-*",
    "check": "bunx turbo run check",
    "clean": "bunx turbo run clean",
    "changeset:empty": "bunx changeset --empty",
    "prebuild": "bun run build:declarations",
    "preinstall": "node -e \"if(!process.env.npm_config_user_agent?.startsWith('bun')){console.error('Please use bun for installation');process.exit(1)}\"",
    "build": "bunx turbo run build --filter=!@flowglad/playground-*",
    "build:declarations": "bunx turbo run build:declarations",
    "packages:changeset": "changeset",
    "packages:version": "changeset version && BIOME_BINARY=@biomejs/cli-linux-x64-musl/biome bunx @biomejs/biome format --write packages/*/package.json",
    "packages:publish": "bunx @cjkihl/changeset-dep-resolver resolve && bun run build:declarations && bun run build && bunx changeset publish && bunx @cjkihl/changeset-dep-resolver restore && BIOME_BINARY=@biomejs/cli-linux-x64-musl/biome bunx @biomejs/biome format --write packages/*/package.json",
    "prepare": "husky"
  },
  "dependencies": {
    "tsx": "4.17.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/cli": "^2.26.0",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^18.0.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "19.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "husky": "^9.1.7",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "tsup": "8.3.6",
    "turbo": "^2.4.4",
    "typescript": "5.8.2",
    "ultracite": "6.5.0"
  },
  "overrides": {
    "esbuild": "0.25.12"
  },
  "workspaces": [
    "packages/*",
    "playground/*"
  ],
  "packageManager": "bun@1.3.1"
}
