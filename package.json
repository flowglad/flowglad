{
  "name": "@flowglad/javascript",
  "private": true,
  "license": "MIT",
  "version": "0.0.0",
  "scripts": {
    "init:flowglad-next": "bun install && bun run build && bun run init:flowglad-next:link && bun run init:flowglad-next:packages && bun run init:flowglad-next:user && bun run init:flowglad-next:env",
    "init:flowglad-next:link": "cd platform/flowglad-next && mkdir -p .vercel && printf '{\"projectId\":\"%s\",\"orgId\":\"%s\"}' \"$FLOWGLAD_VERCEL_PROJECT_ID\" \"$FLOWGLAD_VERCEL_ORG_ID\" > .vercel/project.json",
    "init:flowglad-next:packages": "cd platform/flowglad-next && bun install",
    "init:flowglad-next:user": "cd platform/flowglad-next && bun user $FLOWGLAD_LOCAL_USER",
    "init:flowglad-next:env": "cd platform/flowglad-next && bun run vercel:env-pull:dev",
    "randombytes": "tsx scripts/randomBytes.ts",
    "test": "bunx turbo run test --filter=!@flowglad/playground-*",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "lint:ratchet": "bun platform/flowglad-next/scripts/lint-ratchet/index.ts check",
    "lint:ratchet:init": "bun platform/flowglad-next/scripts/lint-ratchet/index.ts init",
    "lint:ratchet:status": "bun platform/flowglad-next/scripts/lint-ratchet/index.ts status",
    "lint:ratchet:update-baseline": "bun platform/flowglad-next/scripts/lint-ratchet/index.ts update",
    "check:biome": "biome check .",
    "dev": "bunx turbo run dev --parallel --no-cache --filter=!@flowglad/playground-*",
    "check": "bunx turbo run check && bun run lint:ratchet",
    "clean": "bunx turbo run clean",
    "changeset:empty": "bunx changeset --empty",
    "prebuild": "bun run build:declarations",
    "preinstall": "bun x --bun only-allow bun",
    "build": "bunx turbo run build --filter=!@flowglad/playground-*",
    "build:declarations": "bunx turbo run build:declarations",
    "packages:changeset": "changeset",
    "packages:version": "changeset version && bunx @biomejs/biome format --write packages/*/package.json",
    "packages:publish": "bunx @cjkihl/changeset-dep-resolver resolve && bun run build:declarations && bun run build && bunx changeset publish && bunx @cjkihl/changeset-dep-resolver restore && bunx @biomejs/biome format --write packages/*/package.json",
    "prepare": "husky"
  },
  "dependencies": {
    "@flowglad/node": "0.29.0",
    "tsx": "4.17.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/cli": "^2.26.0",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^18.0.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "19.0.0",
    "bun-types": "^1.3.6",
    "conventional-changelog-cli": "^5.0.0",
    "esbuild-fix-imports-plugin": "^1.0.23",
    "husky": "^9.1.7",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "tsup": "8.3.6",
    "turbo": "^2.4.4",
    "typescript": "5.8.2",
    "ultracite": "6.5.0",
    "vercel": "^50.1.6"
  },
  "overrides": {
    "esbuild": "0.25.12"
  },
  "workspaces": [
    "packages/*",
    "playground/*"
  ],
  "packageManager": "bun@1.3.1"
}
