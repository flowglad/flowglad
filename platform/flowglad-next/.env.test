# Test environment configuration
# This file is committed to source control and contains only test/mock values
# Run `bun run test:setup` to start the test database container

# Local test database (from docker-compose.test.yml)
DATABASE_URL=postgresql://test:test@localhost:5432/test_db

# stripe-mock configuration (from docker-compose.test.yml)
# When STRIPE_MOCK_HOST is set, the Stripe SDK routes to stripe-mock
STRIPE_MOCK_HOST=localhost

# flowglad-mock-server configuration (from docker-compose.test.yml)
# When these are set, SDKs route to the mock server instead of real APIs
SVIX_MOCK_HOST=http://localhost:9001
UNKEY_MOCK_HOST=http://localhost:9002
TRIGGER_API_URL=http://localhost:9003
UPSTASH_REDIS_REST_URL=http://localhost:9004
UPSTASH_REDIS_REST_TOKEN=test_secret_token
RESEND_BASE_URL=http://localhost:9005
CLOUDFLARE_R2_ENDPOINT=http://localhost:9006

# Test mode stubs - these are not real credentials
STRIPE_SECRET_KEY=sk_test_stub
STRIPE_TEST_MODE_SECRET_KEY=sk_test_stub
UNKEY_ROOT_KEY=unkey_test_mock
UNKEY_API_ID=api_test_mock
SVIX_API_KEY=svix_test_stub
HMAC_KEY_SVIX=test_hmac_key_for_svix_mock_value
TRIGGER_SECRET_KEY=tr_test_mock_secret_key

# App configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
BETTER_AUTH_URL=http://localhost:3000

# Test email redirect (all emails go here in test mode)
DEV_EMAIL_REDIRECT=test@example.com

# Trace sampling (100% for tests to catch issues)
FLOWGLAD_TRACE_SAMPLE_RATE=1.0
