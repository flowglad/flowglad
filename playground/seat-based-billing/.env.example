# Database Configuration
# PostgreSQL connection string for Drizzle ORM
# Changed port from 5432 to 5433 to avoid conflict with platform's Supabase
DATABASE_URL=postgresql://flowglad:flowglad_dev_password@localhost:5433/flowglad_db

# BetterAuth Configuration
# Secret key for BetterAuth session encryption
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here

# Application Configuration
# Base URL for the application (used for auth callbacks)
NEXT_PUBLIC_BASE_URL=http://localhost:3001

# Server Port
# Changed from 3000 to 3001 to avoid conflict with platform
PORT=3001

# Flowglad Configuration
# Secret key for Flowglad billing and subscription management
# This will be auto-generated by the init script when running locally
FLOWGLAD_SECRET_KEY=test_sk_your_secret_key_here

# Flowglad Platform URL
# Points to local platform instance during development
FLOWGLAD_API_URL=http://localhost:3000
