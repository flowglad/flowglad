{
  "rules": [
    {
      "name": "no-explicit-any-in-tests",
      "plugin": "./plugins/no-explicit-any-in-tests.grit",
      "filePatterns": ["**/*.test.ts", "**/*.test.tsx"],
      "severity": "warn"
    },
    {
      "name": "no-unwrap-outside-boundaries",
      "plugin": "./plugins/no-unwrap-outside-boundaries.grit",
      "filePatterns": ["src/**/*.ts"],
      "severity": "warn"
    }
  ],
  "exclude": [
    "node_modules/**",
    "dist/**",
    ".next/**",
    "src/app/**",
    "src/server/routers/**",
    "src/server/mutations/**",
    "src/server/queries/**",
    "src/server/trpc*.ts",
    "src/trigger/**",
    "src/scripts/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "packages": [
    { "path": "platform/flowglad-next" },
    { "path": "packages/flowglad" },
    { "path": "packages/mock-server" },
    { "path": "packages/nextjs" },
    { "path": "packages/nextjs/server" },
    { "path": "packages/react" },
    { "path": "packages/server" },
    { "path": "packages/shared" }
  ]
}
