{
  "rules": [
    {
      "name": "no-explicit-any-in-tests",
      "plugin": "./plugins/no-explicit-any-in-tests.grit",
      "filePatterns": ["**/*.test.ts", "**/*.test.tsx"],
      "severity": "warn"
    }
  ],
  "exclude": ["node_modules/**", "dist/**", ".next/**"],
  "packages": [
    { "path": "platform/flowglad-next" },
    { "path": "packages/flowglad" },
    { "path": "packages/mock-server" },
    { "path": "packages/nextjs" },
    { "path": "packages/nextjs/server" },
    { "path": "packages/react" },
    { "path": "packages/server" },
    { "path": "packages/shared" }
  ]
}
