{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Build: debug",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun dev",
      "cwd": "${workspaceFolder}/platform/flowglad-next",
      "sourceMapPathOverrides": {
        "webpack://_N_E/*": "${workspaceFolder}/platform/flowglad-next/*"
      }
    },
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun dev",
      "cwd": "${workspaceFolder}/platform/flowglad-next"
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "cwd": "${workspaceFolder}/platform/flowglad-next"
    },
    {
      "name": "Next.js: debug client-side (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "reAttach": true,
      "cwd": "${workspaceFolder}/platform/flowglad-next",
      "pathMappings": [
        {
          "url": "webpack://_N_E",
          "path": "${workspaceFolder}/platform/flowglad-next"
        }
      ]
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/platform/flowglad-next/node_modules/.bin/next",
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/platform/flowglad-next",
      "serverReadyAction": {
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}/platform/flowglad-next"
      }
    },
    {
      "name": "Debug Tests",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun run test",
      "cwd": "${workspaceFolder}/platform/flowglad-next",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Single Test",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun run test ${input:testName}",
      "cwd": "${workspaceFolder}/platform/flowglad-next",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "preLaunchTask": "npm: test:debug"
    }
  ]
}
