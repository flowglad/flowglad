{
  "compilerOptions": {
    "jsx": "react-jsx",
    "declaration": true,
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@flowglad/react": ["../react/src/index.ts"],
      "@flowglad/shared": ["../shared/src/index.ts"],
      "@flowglad/server": ["../server/src/index.ts"]
    }
  },
  "include": ["src"]
}
