{
  "name": "@flowglad/better-auth",
  "version": "0.15.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "check": "biome check . && tsc --noEmit",
    "build:declarations": "tsc -p tsconfig.declarations.json"
  },
  "dependencies": {
    "@flowglad/server": "workspace:*",
    "@flowglad/shared": "workspace:*",
    "zod": "4.1.5"
  },
  "devDependencies": {
    "typescript": "5.8.2",
    "better-auth": "1.3.32"
  },
  "peerDependencies": {
    "better-auth": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "better-auth": {
      "optional": true
    }
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
