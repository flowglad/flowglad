{
  "name": "@flowglad/shared",
  "version": "0.17.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "check": "biome check . && bun run typecheck",
    "build:declarations": "tsc -p tsconfig.declarations.json",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flowglad/flowglad"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "zod": "4.1.5",
    "date-fns": "4.1.0",
    "@flowglad/node": "0.29.0"
  },
  "devDependencies": {
    "typescript": "5.8.2",
    "vitest": "3.0.5"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  }
}
